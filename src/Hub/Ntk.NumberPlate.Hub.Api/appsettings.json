{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=NtkNumberPlateHub;Trusted_Connection=True;MultipleActiveResultSets=true"
    },
    "ImageStorage": {
        "BasePath": "wwwroot/images",
        "MaxImageSizeMB": 10,
        "AllowedExtensions": [
            ".jpg",
            ".jpeg",
            ".png"
        ]
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        }
    }
}
